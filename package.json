{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Personal Finance & Expense Tracker App",
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "cd backend && pnpm run dev",
    "client": "cd frontend && pnpm run dev",
    "install-all": "pnpm install && cd backend && pnpm install && cd ../frontend && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
